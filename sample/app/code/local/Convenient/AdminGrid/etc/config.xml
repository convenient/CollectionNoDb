<?xml version="1.0"?>
<config>
    <modules>
        <Convenient_AdminGrid>
            <version>0.1.0</version>
        </Convenient_AdminGrid>
    </modules>
    <global>
        <models>
            <convenient_admingrid>
                <class>Convenient_AdminGrid_Model</class>
                <resourceModel>convenient_admingrid_resource</resourceModel>
            </convenient_admingrid>
            <convenient_admingrid_resource>
                <class>Convenient_AdminGrid_Model_Resource</class>
            </convenient_admingrid_resource>
        </models>
        <blocks>
            <convenient_admingrid>
                <class>Convenient_AdminGrid_Block</class>
            </convenient_admingrid>
            <convenient_admingrid_adminhtml>
                <class>Convenient_AdminGrid_Block_Adminhtml</class>
            </convenient_admingrid_adminhtml>
        </blocks>
        <helpers>
            <convenient_admingrid>
                <class>Convenient_AdminGrid_Helper</class>
            </convenient_admingrid>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Convenient_AdminGrid before="Mage_Adminhtml">Convenient_AdminGrid</Convenient_AdminGrid>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>
